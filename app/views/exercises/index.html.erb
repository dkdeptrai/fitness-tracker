<div class="flex flex-col">
  <h1 class="text-2xl font-bold mb-4">Exercises</h1>

  <table class="w-full border-collapse mb-6">
    <thead>
    <tr>
      <th class="p-3 text-left border-b font-semibold bg-gray-100">Name</th>
      <th class="p-3 text-left border-b font-semibold bg-gray-100">Description</th>
      <th class="p-3 text-left border-b font-semibold bg-gray-100">Muscle Group</th>
      <th class="p-3 text-left border-b font-semibold bg-gray-100">Category</th>
      <th colspan="3" class="border-b bg-gray-100"></th>
    </tr>
    </thead>

    <tbody>
    <% @exercises.each do |exercise| %>
      <tr class="hover:bg-gray-50">
        <td class="p-3 border-b"><%= exercise.name %></td>
        <td class="p-3 border-b"><%= exercise.description %></td>
        <td class="p-3 border-b"><%= exercise.muscle_groups.map(&:name).join(", ") %></td>
        <td class="p-3 border-b"><%= exercise.exercise_category.name %></td>
        <td class="p-3 border-b"><%= link_to 'Show', exercise_path(exercise), class: 'text-blue-500 hover:text-blue-700' %></td>
        <td class="p-3 border-b"><%= link_to 'Edit', edit_exercise_path(exercise), class: 'text-blue-500 hover:text-blue-700' %></td>
        <td class="p-3 border-b"><%= button_to 'Destroy',exercise_path(exercise), method: :delete, form:{ data: { confirm: 'Are you sure?' } }, class: 'text-red-500 hover:text-red-700' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'New Exercise', new_exercise_path, class: 'inline-block bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700' %>
</div>
